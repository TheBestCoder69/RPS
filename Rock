import random

# Declares the computer
computer = random.randint(1, 3)

# Gets user input for rock, paper, or scissors.
user = int(input("Give me Rock, Scissors, or Paper. (Where rock = 1, scissors = 2, and paper = 3.)"))

# Sets up the Variables
rock = 1
scissors = 2
paper = 3

# Scoreboard Variables
userWin = false
computerWin = false
tie = false

userScore = 0
computerScore = 0

# Defines Scoreboard
def scoreBoard():
    if userWin:
        userScore += 1
    elif computerWin:
        computerScore += 1

if user == computer:
  print("TIE!")
  tie = true

if (user == scissors and computer == paper) or (user == rock and computer == scissors) or (user == paper and computer == rock):
  print("You Win")
  userWin = true
else:
  print("Computer Wins!")
  computerWin = true


